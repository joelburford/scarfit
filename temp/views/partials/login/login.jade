div#login
      <h2>Login</h2>
      form#login
        input.email(type='email', name='email', placeholder='Email', required)
        input.password(type='password', name='password', placeholder='Password', required, minlength=6)
        button.btn-large.btn-primary(type="submit", formmethod="post", formaction="/login" ) Sign Up
      a#login-reset-password Reset Password
      br
      a#login-reset-password Sign Up